---
import Nav from '../components/Nav.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='background-animate w-full h-screen bg-gradient-to-r from-cyan-500 via-teal-500 to-blue-500'
  >
    <Nav />
    <div class='flex flex-col items-center justify-center h-[80vh] w-full'>
      <div
        class='!z-5 relative flex rounded-xl w-11/12 md:w-2/4 bg-gray-100 bg-clip-border shadow-sm shadow-slate-800 flex-col !p-4 3xl:p-![18px] h-4/5'
      >
        <slot />
      </div>
    </div>
  </body>
</html>
<style is:global>
  .background-animate {
    background-size: 400%;

    -webkit-animation: gradient-bg 15s ease infinite;
    -moz-animation: gradient-bg 14s ease infinite;
    animation: gradient-bg 15s ease infinite;
  }

  @keyframes gradient-bg {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .toggle-checkbox:checked {
    @apply: right-0 border-green-400;
    right: 0;
    border-color: #68d391;
  }
  .toggle-checkbox:checked + .toggle-label {
    @apply: bg-green-400;
    background-color: #68d391;
  }

  @keyframes float {
    0% {
      opacity: 1;
      transform: translate3d(0, 0px, 0);
    }
    50% {
      opacity: 0.8;
      transform: translate3d(40px, -40px, 0);
    }
    100% {
      opacity: 1;
      transform: translate3d(0, 0px, 0);
    }
  }

  .animate-float {
    transform: translateY(0px);
    -webkit-animation: float 15s ease infinite;
    -moz-animation: float 15s ease infinite;
    animation: float 15s ease-in-out infinite;
  }
</style>
